<div>
  <div>
    <div>
      <h2>{{posts.title}}</h2>
      <p>User {{posts.User.username}} on {{format_date posts.createdAt}}</p>
    </div>
    <div>{{posts.body}}</div>
  </div>

  {{#if posts.Comments}}
    <div>
      <div><h3>Comments</h3></div>
      <div>
        {{#each posts.Comments}}
          <div><p>{{body}}</p>
            <p>
              <p>User
                {{User.username}}
                on
                {{format_date createdAt}}</p></p>
          </div>
        {{/each}}
      </div>
    </div>

  {{/if}}

  <form action="" id="newComment">
    <div>
      <h3>add comment</h3>
    </div>

    <div>
      <input type="hidden" name="postId" value="{{posts.id}}"/>

      <label for="commentbody">Comment</label>
      <textarea name="commentbody"></textarea>
      <button type="submit">Submit</button>
    </div>
  </form>
</div>


<script src="/javascript/comment.js"></script>